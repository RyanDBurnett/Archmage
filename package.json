{
  "name": "archmage",
  "version": "0.0.0",
  "author": "Ryan Burnett",
  "description": "Character Editor for RPGs",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "test": "node_modules/.bin/ava ./**/*.test.ts --verbose",
    "test:watch": "node_modules/.bin/ava ./**/*.test.ts --verbose --watch"
  },
  "build": {
    "files": [
      "src/static/*"
    ]
  },
  "dependencies": {
    "@types/react": "^16.3.5",
    "@types/react-dom": "^16.0.4",
    "ava": "^1.2.1",
    "babel-register": "^6.26.0",
    "fix-path": "^2.1.0",
    "mobx": "^5.0.0",
    "mobx-react": "^5.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "semantic-ui-css": "^2.3.1",
    "semantic-ui-react": "^0.79.1",
    "source-map-support": "^0.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-react": "^7.0.0-beta.44",
    "electron": "1.8.4",
    "electron-builder": "^20.8.1",
    "electron-webpack": "^2.0.1",
    "electron-webpack-ts": "^2.0.0",
    "node-sass": "^4.9.2",
    "sass-loader": "^7.0.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths-webpack-plugin": "^3.0.3",
    "tslint": "^5.9.1",
    "typescript": "^3.0.0",
    "webpack": "^4.5.0"
  },
  "resolutions": {
    "webpack-sources": "1.1.0"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
